@model IEnumerable<FacebookFriend>
@{

}
<div class="mt-3 w-100" style="max-width: 640px;">
   <div class="field is-horizontal">
      <div class="field-label is-normal">
         <label class="label">Facebook friends</label>
      </div>
      <div class="field-body">
         <div class="field">
            <div class="control">
               <button class="button add-button is-primary">
                  <span class="icon is-small">
                     <i class="fas fa-user-plus"></i>
                  </span>
                  <span>New friend</span>
               </button>
            </div>
         </div>
      </div>
   </div>

   <div class="field is-horizontal">
      <div class="field-label is-normal"></div>
      <div class="field-body">
         <div class="field is-grouped is-grouped-multiline buttons friends-list">
            <partial name="_FacebookFriendsListPartial" model="Model" />
         </div>
      </div>
   </div>

   <div class="modal" id="updatefacebookfriend-modal">
      <div class="modal-background"></div>
      <div class="modal-content">
         <div class="box">
            <form method="post" asp-controller="account" asp-action="updatefacebookfriend">
               <fieldset>
                  <input type="hidden" name="id" value="" />
                  <div class="field">
                     <label class="label">Name</label>
                     <div class="control">
                        <input class="input" type="text" name="Name">
                     </div>
                  </div>
                  <div class="field">
                     <label class="label">Profile Link</label>
                     <div class="field">
                        <div class="control is-expanded">
                           <input class="input" type="text" name="ProfileLink">
                        </div>
                     </div>
                  </div>

                  <div class="field">
                     <p class="control">
                        <button type="button" class="button save-button is-primary">
                           <span class="icon is-small">
                              <i class="fas fa-save"></i>
                           </span>
                           <span>Save</span>
                        </button>
                     </p>
                  </div>
               </fieldset>
            </form>
         </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
   </div>

   <div class="modal" id="deletefacebookfriend-modal">
      <div class="modal-background"></div>
      <div class="modal-content modal-content-small">
         <div class="box">
            <form method="post" asp-controller="account" asp-action="deletefacebookfriend">
               <fieldset>
                  <input type="hidden" name="id" value="" />
                  <div class="content">
                     <p>Remove from friends list ?</p>
                  </div>
                  <div class="buttons">
                     <button type="button" class="button delete-button is-danger">
                        <span class="icon is-small">
                           <i class="fas fa-trash"></i>
                        </span>
                        <span>Yes</span>
                     </button>
                     <button type="button" class="button is-white" data-modal-close="true">No</button>
                  </div>
               </fieldset>
            </form>
         </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
   </div>
</div>