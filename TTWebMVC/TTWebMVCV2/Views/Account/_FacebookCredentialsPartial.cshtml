@model IEnumerable<TTWebCommon.Models.DataModels.FacebookCredential>
@{

}
<div class="mt-3 w-100" style="max-width: 640px;">
   <div class="field is-horizontal">
      <div class="field-label is-normal">
         <label class="label">Facebook logins</label>
      </div>
      <div class="field-body">
         <div class="field">
            <div class="control">
               <button class="button add-button is-primary">
                  <span class="icon is-small">
                     <i class="fas fa-plus"></i>
                  </span>
                  <span>New login</span>
               </button>
            </div>
         </div>
      </div>
   </div>

   <div class="field is-horizontal">
      <div class="field-label is-normal"></div>
      <div class="field-body">
         <div class="field is-grouped is-grouped-multiline buttons credentials-list">
            <partial name="_FacebookCredentialsListPartial" model="Model" />
         </div>
      </div>
   </div>

   <div class="modal" id="updatefacebookcredential-modal">
      <div class="modal-background"></div>
      <div class="modal-content">
         <div class="box">
            <form method="post" asp-controller="account" asp-action="updatefacebookcredential">
               <fieldset>
                  <input type="hidden" name="id" value="" />
                  <div class="field">
                     <label class="label">Username</label>
                     <div class="control">
                        <input class="input" type="text" name="Username">
                     </div>
                  </div>
                  <div class="field">
                     <label class="label">Password</label>
                     <div class="field has-addons">
                        <div class="control is-expanded">
                           <input class="input" type="password" name="Password">
                        </div>
                        <div class="control">
                           <button type="button" class="button password-toggle">
                              <span class="icon">
                                 <i class="fas fa-eye-slash"></i>
                              </span>
                           </button>
                        </div>
                     </div>
                  </div>

                  <div class="field">
                     <p class="control">
                        <button type="button" class="button save-button is-primary">
                           <span class="icon is-small">
                              <i class="fas fa-save"></i>
                           </span>
                           <span>Save</span>
                        </button>
                     </p>
                  </div>
               </fieldset>
            </form>
         </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
   </div>

   <div class="modal" id="deletefacebookcredential-modal">
      <div class="modal-background"></div>

      <div class="modal-content modal-content-small">
         <div class="box">
            <form method="post" asp-controller="account" asp-action="deletefacebookcredential">
               <fieldset>
                  <input type="hidden" name="username" value="" />
                  <div class="content">
                     <p>Delete this facebook login ?</p>
                  </div>
                  <div class="buttons">
                     <button type="button" class="button delete-button is-danger">
                        <span class="icon is-small">
                           <i class="fas fa-trash"></i>
                        </span>
                        <span>Yes</span>
                     </button>
                     <button type="button" class="button is-white" data-modal-close="true">No</button>
                  </div>
               </fieldset>
            </form>
         </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
   </div>
</div>