   <div id="navbarMenu" class="navbar-menu">

      <div class="navbar-start">
         @if (Authenticated)
         {
            <a class="navbar-item" href="@Url.Action("index", "schedule")">
               <span class="icon">
                  <i class="far fa-clock" aria-hidden="true"></i>
               </span>
               <span class="has-icon-left">Schedules</span>
