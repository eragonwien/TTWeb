{
   <div class="buttons is-right px-1 py-1">
      <a class="button is-primary modal-trigger" data-modal-target="#createScheduleModal">
         <span class="icon">
            <i class="fas fa-plus" aria-hidden="true"></i>
         </span>
         <span class="has-icon-left">New schedule</span>
      </a>
   </div>
