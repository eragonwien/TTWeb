@model JobViewModel
@{
   ViewData["Title"] = "Add";
}

<div class="container">
   <form method="post" asp-controller="schedule" asp-action="create">
      @Html.EditorFor(m => m.Name, "Text")

      <div class="field">
         <label class="label" asp-for="Type"></label>
         <div class="select">
            <select asp-for="Type" asp-items="@Model.Types"></select>
         </div>
      </div>

      @for (int i = 0; i < Model.Parameters.Count; i++)
      {
         <div class="field has-addons">
            <p class="control">
               <span class="select">
                  <select asp-for="Parameters[i].Type" asp-items="@Model.ParameterTypes"></select>
               </span>
            </p>
            <p class="control is-expanded">
               <input class="input" type="text" asp-for="Parameters[i].Value" />
            </p>
         </div>
      }
      <partial name="_SubmitButtonsPartial" />
   </form>
</div>
